	RegisterSignal( "StartHackedDeath" )
	RegisterSignal( "RecoverFromHackedDeath" )
	PrecacheParticleSystem( FLESH_PINKMIST_FX )
	PrecacheParticleSystem( MECHNAICAL_PINKMIST_FX )
	
	AddPostDamageCallback( "player", HackedDeath_OnPlayerPostDamage ) // this can get player's real taken damage
	AddDeathCallback( "player", HackedDeath_PlayerRealDeath )
	AddCallback_OnClientConnected( InitHackedDeathForPlayer )

	AddCallback_GameStateEnter( eGameState.Playing, HackedDeathGameSettings ) // settings done after game starts, to prevent being overwrite

	// handling grapple
	AddCallback_OnPlayerGrappled( HackedDeathOnPlayerGrappled ) // modified callback in _codecallbacks.gnut

	// modified callback in _base_gametype.gnut
	AddCallback_PlayerDamageFeedback( HackedDeathPlayerDamage )
	// modified callback in _codecallbacks.gnut
	AddCallback_ShouldPlayDamageChatter( HackedDeathDamageChatter )
}

// utility
bool function HackedDeath_ShouldHandleDamage( entity ent, var damageInfo )
{
	if ( ent.IsMarkedForDeletion() )
		return false
	if ( !ent.IsPlayer() )
		return false
	if ( !file.hackedDeathEnabled || !RespawnsEnabled() ) // don't do hacked death for elimination modes
		return false
	if ( IsInstantDeath( damageInfo ) || DamageInfo_GetForceKill( damageInfo ) || ent.IsTitan() )	
		return false // these shouldn't be handled by hacked death
	return true
}

// NEW callback
bool function HackedDeath_ShouldRunEntityKilledCallback( entity victim, var damageInfo, bool shouldRunCallback )
{
	if ( !victim.IsPlayer() )
		return shouldRunCallback // default value, inherit last callback

	int damageSourceId = DamageInfo_GetDamageSourceIdentifier( damageInfo )
	if ( HackedDeath_IsEnabled() && damageSourceId == damagedef_despawn )
		return false // if hacked death enabled and we're killing the player through damagedef_despawn, we don't do entity killed callbacks and events!
	return shouldRunCallback
}

bool function HackedDeath_ShouldPlayerForcedRespawn( entity victim, table damageTable, bool shouldForceRespawn )
{
	if ( !victim.IsPlayer() )
		return shouldForceRespawn // default value, inherit last callback

	int damageSourceId = expect int( damageTable.damageSourceId )
	if ( HackedDeath_IsEnabled() && damageSourceId == damagedef_despawn )
		return false // if hacked death enabled and we're killing the player through damagedef_despawn, we don't do forced respawn!
	return shouldForceRespawn
}

void function HackedDeathPlayerDamage( entity victim, var damageInfo, PlayerDamageFeedbackStruct feedbackStruct )
{
	if ( HackedDeath_IsEnabled() )
	{
		if ( file.hackedDeathKillshot ) // for pilot entering hackedDeath, notify their actual taken damage
		{
			//print( "pilot triggered hacked death killshot!" )
			feedbackStruct.damageToDisplay = file.hackedDeathActualDamage
			//file.hackedDeathKillshot = false // this var should be reset after try to play the chatter in _codecallbacks.gnut!
		}
	}
}

bool function HackedDeathDamageChatter( entity victim, entity attacker, var damageInfo, table resultTable, bool shouldPlayChatter )
{
	if ( HackedDeath_IsEnabled() )
		shouldPlayChatter = !file.hackedDeathKillshot && expect bool( resultTable.inChatterRange )

	// always try to cleanup hackedDeath killshot variable
	file.hackedDeathKillshot = false

	return shouldPlayChatter
}

