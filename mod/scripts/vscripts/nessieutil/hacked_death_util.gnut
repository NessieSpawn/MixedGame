void function Hacked_Death_Utility_Init()
{
	// callbacks
	AddCallback_ShouldRunEntityKilledCallback( HackedDeath_ShouldRunEntityKilledCallback ) // modified callback in _codecallbacks_common.gnut
	AddCallback_ShouldPlayerDoForcedRespawn( HackedDeath_ShouldPlayerForcedRespawn ) // modified callback in _base_gametype_mp.gnut

