	// Defence
	titan.GiveOffhandWeapon( "mp_titanweapon_vortex_shield", OFFHAND_SPECIAL, ["slow_recovery_vortex", "fakebt_balance", "impact_drain_vortex"] ) // changed sp_wider_return_spread to fakebt_balance
	
