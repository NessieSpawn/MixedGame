bool function BTReplace_TitanIsFakeBT( entity titan )
{
	entity soul = titan.GetTitanSoul()
	if( !IsValid( soul ) )
		return false
	if ( !( soul in file.soulIsFakeBT ) )
		return false
	return file.soulIsFakeBT[ soul ]
}

