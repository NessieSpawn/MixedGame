{
	"Name" : "Nessy Attrition Extended Client",
	"Description" : "Enables R-101, Alternator, Kraber, DMR and L-Star on server. Fixes Desync issues.",
	"Version": "1.1.0",
	"LoadPriority": 3,

	"Scripts": [
		{
			"Path": "/sharedutil/sh_mod_installation_check.gnut",
			"RunOn": "CLIENT && MP",
            "ServerCallback": {
                "After": "Sh_MixedGame_ClientSide_Installation_Check_Init"
            },
			"ClientCallback": {
                "After": "Sh_MixedGame_ClientSide_Installation_Check_Init"
            }
		},
		{
			"Path": "/modweapons/mp_weapon_nessie_pistol.gnut",
			"RunOn": "CLIENT",
			"ClientCallback": {
                "After": "MpWeaponNessiePistol_Init"
            },
            "ServerCallback": {
                "After": "MpWeaponNessiePistol_Init"
            }
		}
	],

	"Localisation": [
		"resource/mixed_game_localization_%language%.txt"
	]
}